# -------------------------------
# Matt's Functions
# -------------------------------

# Make a directory and jump into it
mkcd () { mkdir -p "$1" && cd "$1"; }

# Extract different types of archives
extract () {
  if [ -f "$1" ]; then
    case "$1" in
      *.tar.bz2)   tar xjf "$1"   ;;
      *.tar.gz)    tar xzf "$1"   ;;
      *.bz2)       bunzip2 "$1"   ;;
      *.rar)       unrar x "$1"   ;;
      *.gz)        gunzip "$1"    ;;
      *.tar)       tar xf "$1"    ;;
      *.tbz2)      tar xjf "$1"   ;;
      *.tgz)       tar xzf "$1"   ;;
      *.zip)       unzip "$1"     ;;
      *.Z)         uncompress "$1";;
      *.7z)        7z x "$1"      ;;
      *)           echo "'$1' cannot be extracted via extract()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

help() {
  BLUE='\033[1;34m'
  YELLOW='\033[1;33m'
  RESET='\033[0m'

  echo ""
  printf "${YELLOW}Quick Commands & Shortcuts:${RESET}\n"
  printf "  ${BLUE}ecv${RESET}     →  cd ~/ecv\n"
  printf "  ${BLUE}nextp${RESET}   →  cd ~/NextProjects\n"
  printf "  ${BLUE}expod${RESET}   →  cd ~/ExpoDev\n"
  printf "  ${BLUE}flutd${RESET}   →  cd ~/FlutterDev\n"
  printf "  ${BLUE}conf${RESET}    →  edit Zsh config (~/.zshrc)\n"
  printf "  ${BLUE}aconf${RESET}   →  edit aliases (~/.zsh_aliases)\n"
  printf "  ${BLUE}gconf${RESET}   →  edit greeting (~/.matt_greeting.sh)\n"
  printf "  ${BLUE}sshconf${RESET} →  edit SSH config (~/.ssh/config)\n"
  echo ""
  printf "${YELLOW}Git & Reload:${RESET}\n"
  printf "  ${BLUE}gs${RESET}       →  git status\n"
  printf "  ${BLUE}ga${RESET}       →  git add .\n"
  printf "  ${BLUE}gl${RESET}       →  git log --oneline --graph --decorate --all\n"
  printf "  ${BLUE}rld${RESET}      →  reload Zsh config (~/.zshrc)\n"
  printf "  ${BLUE}mhelp${RESET}    →  show greeting/help banner again\n"
  echo ""
}

